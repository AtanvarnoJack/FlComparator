<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="500" prefWidth="600"
            xmlns="http://javafx.com/javafx/8" fx:controller="View.Home.HomeView" styleClass="background"
            fx:id="appHome">
    <children>
    <BorderPane id="background" xmlns:fx="http://javafx.com/fxml" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <top>
            <ToolBar>
                <items>
                    <Region styleClass="spacer" />
                    <HBox styleClass="segmented-button-bar" alignment="CENTER">
                        <Button fx:id="OpenRepositoryButton" mnemonicParsing="false" onAction="#handleButtonActionOpenRepository" text="Open Repository"/>
                        <Button fx:id="SettingButton" mnemonicParsing="false" onAction="#handleButtonArchitecture" text="Setting"/>
                        <Button fx:id="HelpButton" mnemonicParsing="false" onAction="#handleButtonHelp" text="Help"/>
                    </HBox>
                </items>
            </ToolBar>
        </top>
    </BorderPane>
        <ScrollPane fx:id="scrollPaneLabel" AnchorPane.bottomAnchor="10" AnchorPane.topAnchor="80" AnchorPane.rightAnchor="10"
                    AnchorPane.leftAnchor="10">
            <Label fx:id="labelOutput" >
                <font>
                    <Font name="Courier New" size="11.0"/>
                </font>
            </Label>
        </ScrollPane>
    </children>
</AnchorPane>
